<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johndaniel.glosar"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/launcher_white"
        android:theme="@style/Theme.Glosar" >
        <activity
            android:name="com.johndaniel.glosar.StartPoint"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.johndaniel.glosar.addFile"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/addNewLabel" >
        </activity>
        <activity
            android:name="com.johndaniel.glosar.Train"
            android:label="@string/title_activity_train" >
        </activity>
        <activity
            android:name="com.johndaniel.glosar.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>